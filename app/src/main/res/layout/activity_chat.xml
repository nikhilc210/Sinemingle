<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.Chat">
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toolbar">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/round_corner"
            android:elevation="5dp"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/unmatched"
            android:background="@null"
            android:src="@drawable/ic_unmatched"
            android:tint="@color/grey"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Chats"
            android:textAlignment="center"
            android:fontFamily="@font/abril_fatface"
            android:textSize="28dp"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/admin_chat">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/admin_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/forall"
                android:elevation="5dp"/>
            <TextView
                android:id="@+id/team_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/admin_image"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="SeneMingle Team"
                android:fontFamily="@font/alef_bold"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/admin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_title"
                android:layout_toEndOf="@+id/admin_image"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/cabin"
                android:textColor="@color/black"
                android:text="Nikhil"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/grey"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chat_history"></androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/no_message_box">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@mipmap/message"
                />
            <Button
                android:id="@+id/start_discovering"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_above="@+id/edit_filter"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_corner"
                android:elevation="5dp"
                android:text="Start Discovering"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:textAllCaps="false"
                />
            <RelativeLayout
                android:id="@+id/edit_filter"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:elevation="5dp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_switch"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Edit Filters"
                    android:fontFamily="@font/cabin"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"/>

</RelativeLayout>