<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Praying">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toolbar">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:src="@drawable/ic_close_black_24dp"
            android:id="@+id/close"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logonew"
            android:id="@+id/logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="visible"
        android:id="@+id/pray_box">
        <ImageView
            android:id="@+id/pray_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/pray"/>
        <TextView
            android:id="@+id/pray_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pray_img"
            android:text="How often do you pray?"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pray_text"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Always pray"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/always_pray"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Usually pray"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/usually_pray"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:text="Sometimes pray"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/sometimes_pray"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:text="Never pray"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/never_pray"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>