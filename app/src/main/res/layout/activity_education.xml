<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Education">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toolbar">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:id="@+id/close"
            android:src="@drawable/ic_close_black_24dp"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/medium"
            android:src="@drawable/logonew"
            android:id="@+id/logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/education_leval"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/education_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/education"/>
        <TextView
            android:id="@+id/education_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/education_img"
            android:text="Your level of education"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/education_text"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Bachelors Degree"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:id="@+id/bachelors_degree"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Masters Degree"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:id="@+id/masters_degree"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:text="No Degree Qualification"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:id="@+id/no_degree"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="College"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:id="@+id/collage"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Doctorate"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:id="@+id/doctorate"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:text="Secondary School"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:id="@+id/secondry_school"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Other"
                android:visibility="gone"
                android:fontFamily="@font/cabin"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/education_other"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/edu"
                android:background="@drawable/grey_round_corner"
                android:hint="Education..."
                android:padding="10dp"
                android:maxLines="1"
                android:inputType="text"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_corner"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/alef"
                android:textAllCaps="false"
                android:id="@+id/update"/>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>