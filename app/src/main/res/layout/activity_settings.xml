<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/toolbar">

        <ImageButton
            android:id="@+id/user_info"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_switch"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/round_corner"
            android:elevation="5dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/top_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white">
                            <TextView
                                android:id="@+id/menu_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Menu"
                                android:textAlignment="center"
                                android:textSize="30dp"
                                android:fontFamily="@font/abril_fatface"
                                android:textColor="@color/black"
                                android:layout_marginTop="10dp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/menu_title"
                                android:layout_marginBottom="20dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/user_image"
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30dp"
                                    android:src="@drawable/placeholder"/>
                                <TextView
                                    android:id="@+id/is_incomplete"
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/round_corner"
                                    android:text="Incomplete Profile"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/cabin"
                                    android:layout_marginTop="10dp"
                                    android:visibility="gone"
                                    android:layout_centerHorizontal="true"/>
                                <ImageButton
                                    android:visibility="gone"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="110dp"
                                    android:background="@drawable/round_corner"
                                    android:backgroundTint="#FFF3F6FD"
                                    android:src="@drawable/ic_edit"/>
                                <TextView
                                    android:id="@+id/first_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/user_image"
                                    android:layout_marginTop="2.5dp"
                                    android:text="Nikhil"
                                    android:fontFamily="@font/abril_fatface"
                                    android:textSize="20dp" />
                                <TextView
                                    android:id="@+id/tap_to_complete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/first_name"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2.5dp"
                                    android:text="Tap to complete"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/cabin"
                                    android:textSize="16dp"
                                    android:visibility="gone"
                                    />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_below="@+id/first_name"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp">
                                    <ImageButton
                                        android:id="@+id/settings"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="30dp"
                                        android:background="@drawable/round_corner"
                                        android:backgroundTint="@color/explore_color"
                                        android:elevation="5dp"
                                        android:src="@drawable/ic_settings"
                                        android:tint="@color/colorPrimary"/>
                                    <ImageButton
                                        android:id="@+id/change"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:background="@drawable/round_corner"
                                        android:backgroundTint="@color/explore_color"
                                        android:elevation="5dp"
                                        android:src="@drawable/ic_my"
                                        android:tint="@color/colorPrimary"/>
                                    <ImageButton
                                        android:id="@+id/edit_profile"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="30dp"
                                        android:background="@drawable/round_corner"
                                        android:backgroundTint="@color/explore_color"
                                        android:elevation="5dp"
                                        android:src="@drawable/ic_edit"
                                        android:tint="@color/colorPrimary"/>
                                </RelativeLayout>


                                <ImageButton
                                    android:id="@+id/filters"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/round_corner"
                                    android:backgroundTint="#ffffff"
                                    android:elevation="5dp"
                                    android:layout_marginStart="30dp"
                                    android:visibility="gone"
                                    android:layout_below="@+id/edit_profile"
                                    android:src="@drawable/ic_switch"
                                    tools:ignore="UnusedAttribute" />
                                <TextView
                                    android:id="@+id/filter_text"
                                    android:layout_width="60dp"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/filters"
                                    android:layout_marginStart="30dp"
                                    android:text="FILTERS"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"/>
                                <ImageButton
                                    android:id="@+id/help_center"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/round_corner"
                                    android:backgroundTint="#ffffff"
                                    android:elevation="5dp"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_below="@+id/filter_text"
                                    android:src="@drawable/ic_info"
                                    android:tint="@color/grey"
                                    android:visibility="gone"
                                    tools:ignore="UnusedAttribute" />
                                <TextView
                                    android:id="@+id/help_text"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/help_center"
                                    android:layout_marginStart="50dp"
                                    android:text="HELP CENTER"
                                    android:visibility="gone"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"/>
                                <ImageButton

                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/round_corner"
                                    android:backgroundTint="#ffffff"
                                    android:elevation="5dp"
                                    android:visibility="gone"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="30dp"
                                    android:layout_below="@+id/edit_profile"
                                    android:src="@drawable/ic_settings"
                                    tools:ignore="UnusedAttribute" />
                                <TextView
                                    android:id="@+id/settings_text"
                                    android:layout_width="70dp"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/settings"
                                    android:layout_marginEnd="30dp"
                                    android:text="SETTINGS"
                                    android:layout_alignParentEnd="true"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"/>
                                <ImageButton
                                    android:id="@+id/report_problem"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/round_corner"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="#ffffff"
                                    android:elevation="5dp"
                                    android:layout_marginEnd="70dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_below="@+id/settings_text"
                                    android:src="@drawable/ic_problem"
                                    android:tint="@color/grey"
                                    android:visibility="gone"
                                    tools:ignore="UnusedAttribute" />
                                <TextView
                                    android:id="@+id/report_text"
                                    android:layout_width="140dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/report_problem"
                                    android:layout_marginEnd="30dp"
                                    android:text="REPORT PROBLEM"
                                    android:visibility="gone"
                                    android:layout_alignParentEnd="true"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"/>
                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:background="@color/white"
                    android:layout_below="@+id/top_container">

                    <include layout="@layout/bottom_filter"/>
                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"/>

</RelativeLayout>